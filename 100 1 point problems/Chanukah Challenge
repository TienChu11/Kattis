import java.util.*;


import java.io.File;
import java.lang.*;

public class Main {
    public static
    void main(String[] args){

        Scanner sc = null;

        // real
        sc = new Scanner(System.in);

        int n = sc.nextInt();
        for(int i = 1; i <= n; i++){
            sc.nextInt();
            int next = sc.nextInt();
            int sum = ((1 + next) * next / 2) + next;
            System.out.println(i + " " + sum);
        }
    }
}